<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="75dp"
        android:layout_height="80dp"
        />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:id="@+id/icon2"
        android:layout_alignBottom="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:id="@+id/icon3"
        android:layout_alignBottom="@+id/icon2"
        android:layout_toRightOf="@+id/icon2"
        android:layout_toEndOf="@+id/icon2" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:id="@+id/icon4"
        android:layout_alignBottom="@+id/icon3"
        android:layout_toRightOf="@+id/icon3"
        android:layout_toEndOf="@+id/icon3" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:id="@+id/icon5"
        android:layout_alignBottom="@+id/icon4"
        android:layout_toRightOf="@+id/icon4"
        android:layout_toEndOf="@+id/icon4" />

</RelativeLayout>